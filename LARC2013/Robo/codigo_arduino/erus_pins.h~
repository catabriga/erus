

/* Ardumoto - Rover 5 */
#define PWMA_ROVER 8
#define PWMB_ROVER 7
#define DIRA_ROVER 14
#define DIRB_ROVER 15

/* Ardumoto - Garra 
rever
*/
#define PWMA_CLAW 12 
#define PWMB_CLAW 11
#define DIRA_CLAW 16
#define DIRB_CLAW 17

/* Sensores de ultrassom */

#define US_TRIG_1 24
#define US_ECHO_1 25

#define US_TRIG_2 26
#define US_ECHO_2 27

#define US_TRIG_3 28
#define US_ECHO_3 29

#define US_TRIG_4 30
#define US_ECHO_4 31

#define US_TRIG_5 32
#define US_ECHO_5 33

#define US_TRIG_6 34
#define US_ECHO_6 35

/* Encoder - Rover 5 */
#define INTERRUPT_RIGHT 2
#define DIRECTION_RIGHT 4
#define INTERRUPT_LEFT 3
#define DIRECTION_LEFT 5


/* Servo motor 
	Vermelho -> entrada
	Marrom -> terra
	Laranja -> controle
*/

#define SERVO_PIN 6
#define BUZZER_PIN 39
#define START_PIN 38
#define CLAW_BUTTON 48
#define TURBO_BIN 42

